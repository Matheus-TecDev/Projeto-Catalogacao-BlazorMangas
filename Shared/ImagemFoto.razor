﻿<div>
    @if (ImagemRemota != null)
    {
        <div>
            <div style="margin:10px;">
                <img src="@ImagemRemota" style="width: 271px;" />
            </div>
        </div>
    }
    else
    {
        <div>
            <div style="margin:10px;">
                <img src="semfoto.jpg" width="271" height="186" />
            </div>
        </div>
    }
</div>

@code {

    [Parameter]
    public string? ImagemRemota { get; set; }
}